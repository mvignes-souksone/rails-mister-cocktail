<div class="navbar-lewagon">
  <h1>Forum Cocktail</h1>
  <%= link_to "Add", new_cocktail_path, class: "btn btn-primary btn-add" %>
</div>

<div class="container-bg">
    <div class="container">
      <div class="row">
    <% @cocktails.each do |cocktail| %>
        <div class="card col-lg-3 col-sm-12" style="width: 18rem;">
            <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 150, width:400, crop: :fill, class: "card-img-top card-img-size"  %>
            <% end %>
            <div class="card-body card-each">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <%= link_to "More details", cocktail_path(cocktail), class: "btn btn-primary btn-details" %>
          </div>
        </div>
    <% end %>
      </div>
    </div>

</div>


