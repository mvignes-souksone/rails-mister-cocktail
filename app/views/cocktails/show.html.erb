<div class="container-show">

  <div class="show-title">
    <h1><%= @cocktail.name %></h1>
  </div>

  <% if @cocktail.photo.attached? %>
    <div class="background-show" style="background-image: url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
      <div class="container-ingredients">
        <h2>Ingredients</h2>
        <div class="container-list-ingredients">
          <% @cocktail.doses.each do |dose|%>
            <div class="dose"><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete do %> <i class="fas fa-trash-alt"></i> <% end %></div>

          <% end %>
        </div>
      </div>

      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>

    </div>
  <% end %>


</div>




